curl -X POST http://localhost:3000/users -H "Content-Type: application/json" -d "{\"user\":{\"name\":\"John Doe\",\"email\":\"john@example.com\"}}"

curl -X GET http://localhost:3000/users

curl -X GET http://localhost:3000/users/1

curl -X PATCH http://localhost:3000/users/1 -H "Content-Type: application/json" -d "{\"user\":{\"name\":\"John Updated\",\"email\":\"john.updated@example.com\"}}"

curl -X DELETE http://localhost:3000/users/1